/* pages/photo/photo.wxss */

page {
  background-color: #fff;
}

.userinfo {
  width: 100%;
  height: 220rpx;
  background-color: #cb2a2a;
  position: relative;
}

.head-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  bottom: -65rpx;
  left: 30rpx;
}

.photo-item {
  width: 100%;
  height: 200rpx;
  margin-top: 50rpx;
}

.photo-item-left {
  width: 130rpx;
  height: 100%;
  float: left;
}

.yue {
  width: 100%;
  float: left;
  text-align: right;
  font-size: 60rpx;
  font-weight: 600;
}

.nian {
  width: 100%;
  float: left;
  text-align: left;
  font-size: 30rpx;
  margin-left: 12rpx;
}

.photo-item-right {
  width: 500rpx;
  margin-top: 10rpx;
  height: 100%;
  float: left;
  margin-left: 35rpx;
}

.photo-item-right .title {
  width: 100%;
  height: 40rpx;
  font-weight: 600;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content-v {
  width: 100vw;
  height: auto;
  padding-left: 5%;
  padding-right: 5%;
}

.content-title {
  width: 100%;
  height: 60rpx;
  color: #333;
  font-size: 33rpx;
  border-bottom: 1px solid rgba(232, 232, 233, 1);
}

.photo-item-content {
  width: 100%;
  height: 120rpx;
  float: left;
  margin-top: 15rpx;
}

.photo-item-text {
  width: 360rpx;
  height:80rpx;
  font-size: 30rpx;
  color: #666;
  float: left;
  margin-top: 25rpx;
  margin-left: 10rpx;
  letter-spacing: 0;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2; /*要显示的行数*/
  -webkit-box-orient: vertical;
}

.photo-item-img {
  width: 120rpx;
  float: left;
  height: 120rpx;
}

.head-name {
  width: 400rpx;
  font-size: 35rpx;
  color: #fff;
  position: absolute;
  bottom: 20rpx;
  left: 220rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.new-v {
  width: 100%;
  height: 190rpx;
  position: relative;
}

.new-img {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  bottom: 0rpx;
  right: 50rpx;
}

.new-text {
  width: auto;
  font-size: 35rpx;
  color: #333;
  position: absolute;
  bottom: 5rpx;
  right: 190rpx;
  overflow: hidden;
  font-weight: 400;
  text-overflow: ellipsis;
  white-space: nowrap;
}
