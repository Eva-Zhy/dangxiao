page {
  background-color: #fff;
}

.card-v {
  width: 90%;
  height: auto;
  float: left;
  margin-top: 30rpx;
  margin-left: 5%;
  padding: 25rpx;
  border-radius: 16rpx;
  box-shadow: 0px 2px 8px 0px rgba(0, 0, 0, 0.1);
}

.card-title {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  color: #333;
  font-weight: 600;
  font-size: 30rpx;
  float: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-img {
  width: 100%;
  height: 240rpx;
  float: left;
  margin-top: 15rpx;
}

.card-msg {
  width: 100%;
  height: 50rpx;
  margin-top: 15rpx;
  float: left;
}

.card-time {
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  color: #999;
  font-size: 26rpx;
}

.card-more {
  width: auto;
  height: 50rpx;
  line-height: 50rpx;
  float: right;
  color: #999;
  font-size: 26rpx;
}

.card-more-icon {
  height: 25rpx;
  width: 25rpx;
   float: right;
   margin-top: 11rpx;
}
